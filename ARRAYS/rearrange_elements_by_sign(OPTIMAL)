vector<int> rearrange_elements_by_sign_optimal(vector<int>& a)
{
    int posIndex=0,negIndex=1;
    for(int i=0;i<n;i++0)
    {
        if(a[i]<0)
        {
            ans[negIndex]=a[i];
            negIndex+=2;
        }
        else
        {
            ans[posIndex]=a[i];
            posIndex+=2;
        }
    }
    return ans;
}