int longest_subarray_with_sum_k(vector<int>& a,int k)
{
    int n=a.size();
    int max_length=0;
    int sum=0;
    int start=0;
    for(int i=0;i<n;i++)
    {
        sum+=a[i];
        while(sum>k && start<=i)
        {
            sum-=a[start];
            start++;
        }
        max_length=max(max_length,i-start+1);
    }
    return max_length;
}